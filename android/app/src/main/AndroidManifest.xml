            android:name="android.appwidget.provider"
            android:resource="@xml/quick_add_widget_info" />
    </receiver>
    <receiver android:name=".RemoteInputReceiver" android:exported="true">
      <intent-filter>
        <action android:name="com.levanchung.it.KLTN_UIT.ACTION_REMOTE_REPLY" />
      </intent-filter>
    </receiver>
  </application>
</manifest>
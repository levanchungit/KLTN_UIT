<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- ChatGPT-like card -->
    <LinearLayout
        android:id="@+id/chatgpt_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_card_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Input / placeholder row (tap to type) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/widget_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/widget_logo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="logo"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/widget_input_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans_regular"
                android:maxLines="1"
                android:text="Tạo giao dịch"
                android:textColor="#88FFFFFF"
                android:textSize="14sp"
                android:textStyle="normal" />

            <!-- place action icons inside the input row on the right -->
            <ImageButton
                android:id="@+id/action_voice"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/widget_icon_bg"
                android:contentDescription="voice"
                android:elevation="4dp"
                android:padding="8dp"
                android:src="@drawable/outline_image_24"
                android:tint="#FFFFFF"
                android:translationZ="4dp" />

            <ImageButton
                android:id="@+id/action_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/widget_icon_bg"
                android:contentDescription="image"
                android:elevation="4dp"
                android:padding="8dp"
                android:src="@drawable/outline_keyboard_voice_24"
                android:tint="#FFFFFF"
                android:translationZ="4dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
